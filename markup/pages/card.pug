extends _template.pug

include ../components/content-img/content-img.pug
include ../components/promo-card/promo-card.pug
include ../components/about/about.pug
include ../components/picture/picture.pug
include ../components/bg-img/bg-img.pug
include ../components/link/link.pug
include ../components/main-title/main-title.pug
include ../components/title/title.pug
include ../components/description/description.pug
include ../components/subtitle/subtitle.pug
include ../components/product-card/product-card.pug
include ../components/slider-btn/slider-btn.pug
include ../components/block-info/block-info.pug
include ../components/contacts/contacts.pug
include ../components/collage/collage.pug
include ../components/button/button.pug
include ../components/product/product.pug
include ../components/paginator/paginator.pug
include ../components/form/form.pug
include ../components/input/input.pug
include ../components/checkbox-list/checkbox-list.pug
