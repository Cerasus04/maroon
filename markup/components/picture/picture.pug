mixin picture(params)
    picture&attributes(attributes)
        each item in params.source
            source(media=item.media type=item.type srcset=params.src + params.path + "/" + item.image + "@1x." + item.format + " 1x" + "," + params.src + params.path + "/" + item.image + "@2x." + item.format + " 2x")
        img(src=params.src + params.path + "/" + params.image + "@1x." + params.format, srcset= params.src + params.path + "/" + params.image + "@2x." + params.format + " 2x", width= params.width, height= params.height, alt= params.altText)
