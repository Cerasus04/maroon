mixin checkbox-list(params)
    ul.checkbox-list
        each item in params.checkbox
            li.checkbox-list__item
                - var labelClass = params.labelClass || false;
                - var labelText = item.labelText;
                - var fieldId =item.dif && params.fieldId + '-' + item.dif;
                - var name = params.name;
                - var value = item.value || false;
                - var checked = item.checked || false;

                !='<!-- input-for: ' + labelText + '-->'
                input(class='visually-hidden' type='checkbox' id=fieldId name=params.name value=value checked=checked)
                label(class=labelClass for=fieldId) !{labelText}
